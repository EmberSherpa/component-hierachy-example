{{#if node}}
  <span {{action 'toggleOpenness'}}>{{if isOpen '-' '+'}}{{node.name}}</span>
{{/if}}
{{#if isOpen}}
  <ul>
  {{#each children as |child|}}
    {{#if template}}
      {{yield child node}}
    {{else}}
      {{async-tree node=child parent=node fetch=fetch}}
    {{/if}}
  {{/each}}
  </ul>
{{/if}}
