{{#if isOpen}}
  {{yield node isOpen hasChildren}}
  <ul>
  {{#each children as |child|}}
    {{#async-tree
      tagName="li"
      fetch=fetch
      checkOpen=checkOpen
      open="open"
      close="close"
      parent=node
      node=child
      as |child isOpen hasChildren|
    }}
      {{yield child isOpen hasChildren}}
    {{/async-tree}}
  {{/each}}
  </ul>
{{else}}
  {{yield node isOpen hasChildren}}
{{/if}}
